<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgotPass_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white100"
    android:fillViewport="true"
    tools:context="com.nostratech.mufit.consumer.forgot_password.ForgotPasswordActivity">

    <LinearLayout
        android:id="@+id/forgotPass_rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/forgotPass_mufitLogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_90dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_logo"
            android:contentDescription="@string/default_content_desc"
            android:src="@drawable/mufit_red" />

        <TextView
            android:id="@+id/forgotPass_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_bottom_logo"
            android:fontFamily="@font/trueno_medium"
            android:text="@string/forgot_pass_title"
            android:textColor="@color/grey_1"
            android:textSize="@dimen/_18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forgotPass_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_left_edit_text"
            android:layout_marginTop="@dimen/margin_top_edit_text"
            android:layout_marginEnd="@dimen/margin_right_edit_text"
            android:fontFamily="@font/trueno_regular"
            android:gravity="center"
            android:text="@string/forgot_pass_text_1"
            android:textSize="@dimen/_14sp" />

        <TextView
            android:id="@+id/forgotPass_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_left_edit_text"
            android:layout_marginEnd="@dimen/margin_right_edit_text"
            android:fontFamily="@font/trueno_regular"
            android:gravity="center"
            android:text="@string/forgot_pass_text_2"
            android:textSize="@dimen/_14sp" />


        <LinearLayout
            android:id="@+id/forgotPass_layoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_edittext_margin_left_right"
            android:layout_marginTop="@dimen/margin_top_edit_text"
            android:layout_marginRight="@dimen/register_edittext_margin_left_right"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/forgotPass_etEmail"
                style="@style/EditTextAppearance"
                android:hint="@string/edit_text_forgot_pass"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/forgotPass_textEmailInvalidAlert"
                android:layout_width="@dimen/register_edittext_width"
                android:layout_height="wrap_content"
                android:text="@string/not_valid_email"
                android:fontFamily="@font/trueno_regular"
                android:textColor="@color/error_text"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/forgotPass_layoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_edittext_margin_left_right"
            android:layout_marginTop="@dimen/register_button_margin_top_bottom"
            android:layout_marginRight="@dimen/register_edittext_margin_left_right"
            android:layout_marginBottom="@dimen/register_button_margin_top_bottom"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/forgotPass_btnForgot"
                android:layout_width="@dimen/edit_text_size"
                android:layout_height="@dimen/_45dp"
                android:layout_gravity="center"
                android:background="@drawable/button_background_orange"
                android:fontFamily="@font/trueno_medium"
                android:text="@string/button_text_forgot_pass"
                android:textColor="@color/white100"
                android:textSize="@dimen/_18sp"
                android:visibility="gone" />


            <Button
                android:id="@+id/forgotPass_btnForgotDisabled"
                android:layout_width="@dimen/register_edittext_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_button_disable"
                android:enabled="false"
                android:fontFamily="@font/trueno_medium"
                android:text="@string/button_text_forgot_pass"
                android:textColor="@color/white100"
                android:textSize="@dimen/_18sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_left_text"
            android:layout_marginTop="@dimen/margin_top_edit_text"
            android:layout_marginEnd="@dimen/margin_right_text"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forgotPass_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/trueno_regular"
                android:text="@string/to_register_1"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/forgotPass_textPromptRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/trueno_regular"
                android:text="@string/to_register_2"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/forgotPass_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/trueno_regular"
                android:text="@string/to_register_3"
                android:textSize="@dimen/_15sp" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>