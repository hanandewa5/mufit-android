<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150dp"
        android:contentDescription="@string/default_content_desc"
        android:elevation="@dimen/_5dp"
        app:riv_corner_radius="@dimen/card_corner_radius"
        android:src="@color/preload_image_gray"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/_10dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/trueno_semi_bold"
        android:textSize="@dimen/_10sp"
        android:textColor="#FF4A4A4A"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Lorem ipsum dolor sit amet, conscteur adipisicng elit. sed do eiusmod tempor inciddint ut labore ert dolore magna aliqua."/>

    <TextView
        android:id="@+id/description"
        android:layout_marginTop="@dimen/_3dp"
        android:fontFamily="@font/trueno_light"
        android:textColor="#FF626262"
        android:textSize="@dimen/_10sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>