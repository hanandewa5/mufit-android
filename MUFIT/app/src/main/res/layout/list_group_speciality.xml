<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/detail_trainer_adapter_padding_speciality_header"
        android:paddingBottom="@dimen/detail_trainer_adapter_padding_speciality_header"
        android:paddingEnd="@dimen/detail_trainer_adapter_padding_speciality_header"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/txt_speciality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="?android:attr/expandableListPreferredItemPaddingLeft"
            android:textSize="@dimen/detail_trainer_adapter_text_size"
            android:layout_weight="1"
            android:textColor="@color/black87"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/detail_trainer_adapter_text_size"
                android:text="@string/detail_trainer_divider_price"
                android:textColor="@color/black87"
                tools:ignore="RtlSymmetry" />


            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_trainer_adapter_text_size"
                android:textColor="@color/orange"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/detail_trainer_adapter_speciality_icon_margin"
            android:layout_gravity="end"
            android:src="@drawable/arrow_down"
            android:contentDescription="@string/default_content_desc"/>


    </LinearLayout>
    <View
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_trainer_adapter_speciality_divider"
        android:background="#dfdfdf" />
</RelativeLayout>
