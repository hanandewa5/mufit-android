<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_voucher_detail_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_10dp"
    android:paddingEnd="@dimen/_10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layout_voucher_title"
        android:layout_width="@dimen/_120dp"
        android:layout_height="@dimen/_60dp"
        android:layout_marginStart="@dimen/_2dp"
        android:layout_marginTop="@dimen/_16dp"
        android:background="@drawable/voucher_title_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_voucher_detail_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/trueno_regular"
            android:gravity="center"
            android:text="Package 10"
            android:textColor="@color/white100"
            android:textSize="@dimen/_18sp" />
    </RelativeLayout>

    <!--<RelativeLayout-->
        <!--android:id="@+id/relativeLayout"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toEndOf="@id/layout_voucher_title"-->
        <!--tools:layout_editor_absoluteY="15dp">-->

    <LinearLayout
        android:id="@+id/layout_voucher_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20dp"
        app:layout_constraintStart_toEndOf="@id/layout_voucher_title"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_voucher_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_19dp"
            android:fontFamily="@font/trueno_bold"
            android:text="For Yoga by Armstrong"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/text_voucher_detail_use_for"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_19dp"
            android:fontFamily="@font/trueno_light"
            android:text="Available 12/12"
            android:textColor="#FF4A4A4A"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/text_voucher_detail_valid_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_19dp"
            android:fontFamily="@font/trueno_regular"
            android:text="Until 10 Nov 2018"
            android:textColor="#FF4A4A4A"
            android:textSize="@dimen/_12sp" />


    </LinearLayout>

    <RadioButton
        android:id="@+id/radioButton_voucher_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_4dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/layout_voucher_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <!--</RelativeLayout>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_16dp"
        android:background="#FFDFDFDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_voucher_title" />


</androidx.constraintlayout.widget.ConstraintLayout>